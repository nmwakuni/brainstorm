# ============================================================================
# Environment Variables for Docker Compose
# ============================================================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=salary_advance
POSTGRES_PASSWORD=changeme_in_production_use_strong_password
POSTGRES_DB=salary_advance
POSTGRES_PORT=5432

DATABASE_URL=postgresql://salary_advance:changeme_in_production_use_strong_password@postgres:5432/salary_advance

# ============================================================================
# Application Ports
# ============================================================================
API_PORT=3000
WEB_PORT=3001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================================
# Authentication
# ============================================================================
# Generate a strong random string for production
# Example: openssl rand -base64 64
JWT_SECRET=change-this-in-production-use-long-random-string-min-32-chars

# ============================================================================
# API Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000

# For production, use your domain
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ============================================================================
# M-Pesa Configuration
# ============================================================================
MPESA_ENABLED=false
MPESA_ENVIRONMENT=sandbox

# Sandbox credentials (get from https://developer.safaricom.co.ke/)
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your_passkey_here

# B2C Configuration
MPESA_INITIATOR_NAME=testapi
MPESA_INITIATOR_PASSWORD=Safaricom999!*!

# Callback URL (must be publicly accessible)
MPESA_CALLBACK_URL=https://yourdomain.com/api/mpesa/callback

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================================================
# Node Environment
# ============================================================================
NODE_ENV=production
