DATABASE_URL="postgresql://user:password@localhost:5432/salary_advance"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
PORT=3001
NODE_ENV="development"

# ============================================================================
# M-Pesa Daraja API Configuration
# ============================================================================
# Get your credentials from: https://developer.safaricom.co.ke
# Guide: https://developer.safaricom.co.ke/Documentation

# Enable/disable M-Pesa integration (set to true for production)
MPESA_ENABLED=false

# Environment: sandbox or production
MPESA_ENVIRONMENT=sandbox

# Your app credentials from Safaricom Developer Portal
MPESA_CONSUMER_KEY=""
MPESA_CONSUMER_SECRET=""

# B2C Configuration
MPESA_SHORTCODE=""                # Your paybill/till number
MPESA_INITIATOR_NAME="testapi"    # Default for sandbox is "testapi"
MPESA_SECURITY_CREDENTIAL=""      # Encrypted password (use sandbox test credential)
MPESA_PASSKEY=""                  # For STK Push (if needed)

# Webhook URL for M-Pesa callbacks (must be publicly accessible HTTPS)
# Example: https://yourdomain.com/mpesa
MPESA_CALLBACK_URL=""

# ============================================================================
# Notes for Production
# ============================================================================
# 1. Set MPESA_ENABLED=true
# 2. Set MPESA_ENVIRONMENT=production
# 3. Use production credentials
# 4. Ensure MPESA_CALLBACK_URL is HTTPS and publicly accessible
# 5. Encrypt initiator password using M-Pesa public certificate
# 6. Test thoroughly in sandbox before going live
